@model IEnumerable<DokterPraktekV2.doctor>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.homeAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.registerDatetime)
        </th>
        <th>
            Day In
        </th>
        <th>
            Input Obat
        </th>
        <th>
            Status Obat
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.homeAddress)
        </td>
        <td>
            @if(item.gender == true)
            {
                <p>Pria</p>
            }else
            {
                <p>Wanita</p>
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.registerDatetime)
        </td>
        <td>
            @Html.ActionLink("Change", "Create", "dayIn", new { id = item.id }, new { @class = "btn btn-danger" })
        </td>
        <td>
            @Html.ActionLink("Input", "Create","medicines", new { id = item.id }, new { @class = "btn btn-primary" })
        </td>
        <td>
            @Html.ActionLink("Status", "Details", "doctors", new { id = item.id }, new { @class = "btn btn-success" })
        </td>
        <td>
            <a href="/Doctors/TodaySchedule/@item.id">Today Schedule</a> |
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
