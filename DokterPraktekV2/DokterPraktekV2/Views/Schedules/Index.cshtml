@model PagedList.IPagedList<DokterPraktekV2.Models.VM_bookList>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Booking List";
}

    <h4>
        <span class="btn btn-primary">
            Patient Booking List <span class="badge badge-warning">@ViewBag.TotalBook</span>
        </span>
    </h4>


<div class="clearfix"></div>

@using (Html.BeginForm("Index" , "schedules", FormMethod.Get))
{
    <p>

        Find by patient name: <input id="searchString" name="searchString" type="text">
        <button type="submit" class="btn btn-primary btn-sm">
            <span class="glyphicon glyphicon-search"></span> Search
        </button>

        @*<input type="submit" value="Search" />*@
    </p>
}
<table class="table table-striped">
    <tr>
        <th>
            <label>Doctor Name</label>
        </th>
        <th>
            <label>No Booking</label>
        </th>
        <th>
            <label>Patient Name</label>
        </th>
        <th>
            <label>Patient ID</label>
        </th>
        <th>
            <label>Appointment Date</label>
        </th>
        <th>
            Booking Status
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>

        <td>
            @Html.DisplayFor(modelItem => item.DoctorName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NoBooking)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.PatientName)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.id)
        </td>
        <td>
            @item.BookDate.ToString("dd-MMM-yy")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BookingStatus)
        </td>
        <td>
            @if (item.BookingStatus == "Booking")
            {
                @*@Html.ActionLink("Complete", "CheckIndex", new { id = item.id }) <text> | </text>*@
                @Html.ActionLink("Cancel", "CancelIndex", new { id = item.id})
            }
            else if (item.BookingStatus == "Completed")
            {

            }
            else
            {

            }
        </td>
    </tr>
}

</table>
<br />
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index", new { page, currentFilter = ViewBag.CurrentFilter }))