@model DokterPraktekV2.Models.VM_Specialties

@{
    ViewBag.Title = "Create";
}
@Html.Partial("CreateNew")
<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-2 control-label"><label>Specialty</label></div>
            <div class="col-md-10">
                @Html.DropDownListFor(x => x.SelectedId , new SelectList(Model.ListSpecialties, "id", "specialty"), "-- Select Specialty --", new { @class="form-control"})
                @Html.ValidationMessageFor(model => model.SelectedId, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add" class="btn btn-default" />
                <input type="button" class="btn btn-default" value="Create New" data-toggle="modal" data-target="#createNew" />
            </div>
        </div>
    </div>
}

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                Specialty
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    @foreach (var item in Model.ListDoctorSpecialties)
    {
        <tr>
            <td>
                @item.specialty
            </td>
            <td>
                @Html.ActionLink("Remove", "Delete", new { id = item.id })
            </td>
        </tr>
    }
</table>
