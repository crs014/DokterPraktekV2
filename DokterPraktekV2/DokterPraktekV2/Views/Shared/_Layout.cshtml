<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .table {
            background-color : white;
        }

        .table thead {
            background-color : black;
            color : white;
        }
        .panel-default .panel-heading{
            color:white;
            background-color:#333;
        }
    </style>
</head>
<body style="background-color:#f0e9ee">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Clinic", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (User.IsInRole("doctor"))
                    {
                        <li>@Html.ActionLink("Today Schedule", "Index", "doctors")</li>
                        <li>@Html.ActionLink("Medicines", "Index", "medicines")</li>
                        <li>@Html.ActionLink("Medicines Trans", "Index", "medicineTransactions")</li>
                        <li>@Html.ActionLink("Patients","Index", "patients")</li>
                        <li>@Html.ActionLink("My Specialties", "Add", "specialties")</li>
                        <li>@Html.ActionLink("Work Schedule", "Create", "dayIn")</li>
                    }
                    else if (User.IsInRole("admin"))
                    {
                        <li>@Html.ActionLink("Today's Booking List", "TodayBook", "schedules")</li>
                        <li>@Html.ActionLink("Payment", "Index", "Transaction")</li>
                        <li>@Html.ActionLink("List patients", "allPatient", "patients")</li>
                        <li>@Html.ActionLink("All Booking", "Index", "schedules")</li>
                    }
                    else if (User.IsInRole("superuser"))
                    {
                        <li>@Html.ActionLink("List doctors", "Doctor", "SuperUser")</li>
                        <li>@Html.ActionLink("List admins", "Admin", "SuperUser")</li>
                        <li>@Html.ActionLink("List patients", "allPatient", "patients")</li>
                        <li>@Html.ActionLink("Today's Booking List", "TodayBook", "schedules")</li>
                        <li>@Html.ActionLink("All Booking", "Index", "schedules")</li>
                        
                    }
                    else
                    {
                        <li>@Html.ActionLink("Book Now !", "Select", "schedules")</li>
                    }


                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <footer>
           
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
